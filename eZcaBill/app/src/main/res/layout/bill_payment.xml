<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgrnd">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/ll1"
        android:background="#096030"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back">

            <com.rey.material.widget.LinearLayout
                android:id="@+id/layout_back"
                style="@style/Material.Drawable.Ripple.Touch"
                android:layout_width="65dp"
                android:paddingStart="15dp"
                android:paddingEnd="25dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:layout_height="45dp">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/back" />
            </com.rey.material.widget.LinearLayout>

            <!--<ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/back" />-->
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/bilpaymnt"
            android:text="Bill Payment"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>

 <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ll1"
     android:id="@+id/ll2"
    android:orientation="horizontal">



     <EditText
         android:id="@+id/input_name"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="10dp"
         android:inputType="number"
         android:maxLength="10"
         android:hint="Phone Number"
         android:drawableLeft="@drawable/serch"
         android:drawablePadding="10dp"
         android:background="@null"
         android:singleLine="true"/>

     <ImageButton
         android:id="@+id/imageButton1"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:background="@drawable/clsbtn"
         android:layout_marginRight="10dp"
         android:layout_gravity="center"
         android:layout_alignTop="@+id/input_name"
         android:layout_alignParentEnd="true"/>

 </RelativeLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/phline"
    android:layout_below="@+id/ll2">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginBottom="10dp"/>

</LinearLayout>



<!--
        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">-->
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_below="@+id/ll2">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">


                <ListView
                    android:id="@+id/bill_listView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="1dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="20dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                   />

            </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"                           >

                    <include
                        layout="@layout/copyrights"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">

                    </include>

                </LinearLayout>
</LinearLayout>
     <!-- </HorizontalScrollView>-->


</RelativeLayout>
