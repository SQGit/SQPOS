<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="net.sqindia.ezcabill"

    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_USER_DICTIONARY"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sq"
        android:label="@string/app_name"
        tools:replace="android:icon"
        android:theme="@style/AppTheme">

        <activity android:name="net.sqindia.ezcabill.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name="net.sqindia.ezcabill.Add_Plan"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"></activity>
        <activity android:name="net.sqindia.ezcabill.Plan_List"></activity>

        <activity android:name="net.sqindia.ezcabill.DashBoard"></activity>

        <activity android:name="net.sqindia.ezcabill.MainActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"></activity>


        <activity android:name="net.sqindia.ezcabill.TabLayoutActivity"
            android:theme="@style/AppTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity android:name="net.sqindia.ezcabill.Unpaid"></activity>

<activity android:name="net.sqindia.ezcabill.Paid"></activity>

        <activity android:name="net.sqindia.ezcabill.Bill_Payment"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"></activity>

        <activity android:name="net.sqindia.ezcabill.BluetoothPrinterMain"

            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"></activity>

        <activity android:name="net.sqindia.ezcabill.Sales_Report"></activity>

        <activity android:name="net.sqindia.ezcabill.Customer_List"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"></activity>

        <activity android:name="net.sqindia.ezcabill.Edit_Customer"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"></activity>

        <activity android:name=".Settings"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"></activity>

    </application>

</manifest>