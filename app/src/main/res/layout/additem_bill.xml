            android:paddingLeft="5dp"
            android:text="Sno"
            android:textColor="#FFFF"
            android:textSize="18dp"
            android:textStyle="bold" />
-->
        <TextView
            android:id="@+id/txt_fName"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="ItemName"
            android:layout_marginLeft="20dp"
            android:textColor="#FFFF"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_pprz"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="Price"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFF"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txt_lName"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="Qty"
            android:textSize="20dp"
            android:textColor="#FFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="Total"
            android:textColor="#FFFF"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>


    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
       >

    </ListView>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="525dp"
        android:background="#D9000000"
        android:orientation="horizontal">

        <Button
            android:id="@+id/print"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/prints" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="or"
            android:textColor="#FFFF" />

        <Button
            android:id="@+id/sendmail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/emails" />



      <!--  <TextView
            android:id="@+id/textVie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="or"
            android:textColor="#FFFF" />

        <Button
            android:id="b@+id/savebtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/saves" />
-->

        <TextView
            android:id="@+id/toatlamt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:padding="10dp"
            android:text="TOTAL :"
            android:textColor="@android:color/primary_text_dark"
            android:textStyle="bold" />









        <TextView
            android:id="@+id/grand_tot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:background="@android:color/transparent"
            android:text="0"

            android:textColor="@android:color/primary_text_dark"
            android:textStyle="bold" />


    </LinearLayout>


    <include
        android:id="@+id/container_header_lyt"
        layout="@layout/sqindia_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

    </include>

    <com.arlib.floatingsearchview.FloatingSearchView
        android:id="@+id/product_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="18dp"
        android:textColor="#FFFF"
        app:floatingSearch_backgroundColor="#D9794b2e"
        app:floatingSearch_viewTextColor="#FFFF"
        app:floatingSearch_hintTextColor="#FFFF"
        app:floatingSearch_actionMenuOverflowColor="#D6000000"
        app:floatingSearch_dismissOnOutsideTouch="true"
        app:floatingSearch_leftActionMode="showSearch"
        app:floatingSearch_searchBarMarginTop="@dimen/search_view_inset"
        app:floatingSearch_searchHint="Product"
        app:floatingSearch_showSearchKey="false">
        <requestFocus/>

    </com.arlib.floatingsearchview.FloatingSearchView>

    <EditText

        android:id="@+id/product_qty"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="52.5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_bg_stroke"
        android:ems="5"
        android:textColorHint="#dcd3cf"
        android:hint="QTY"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#FFFF"
        android:textSize="18dp">



    </EditText>

    <Button
        android:id="@+id/add_bill"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/rounded"
        android:drawableLeft="@mipmap/additem_small"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Add"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textStyle="bold" />


</RelativeLayout>