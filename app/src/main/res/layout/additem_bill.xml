    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:orientation="horizontal"
        >

      <!--  <TextView
            android:id="@+id/txt_id"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
