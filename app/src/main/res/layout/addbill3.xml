<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#BF000000"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/lin1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD SEARCH ITEM"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:textColor="#FFF"
            android:id="@+id/textView7"
            android:textSize="20sp"
            android:layout_gravity="bottom" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#D9794b2e"
        android:orientation="horizontal"
        android:layout_below="@id/lin1">

        <com.arlib.floatingsearchview.FloatingSearchView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14dp"
            app:floatingSearch_actionMenuOverflowColor="@android:color/transparent"
            app:floatingSearch_dismissOnOutsideTouch="true"
            app:floatingSearch_leftActionMode="showSearch"
            app:floatingSearch_searchBarMarginLeft="@dimen/search_view_inset"

            app:floatingSearch_searchBarMarginRight="@dimen/search_view_inset"
            app:floatingSearch_searchBarMarginTop="@dimen/search_view_inset"
            app:floatingSearch_searchHint="Product"
            app:floatingSearch_showSearchKey="false" />

        <EditText

            android:id="@+id/product_qty"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_marginLeft="212dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_bg_stroke"
            android:hint="QTY"
            android:textSize="14dp"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true">

        </EditText>

        <Button
            android:id="@+id/add_bill"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded"
            android:text="Add"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#D9794b2e"
        android:orientation="horizontal"
        android:id="@+id/lin2"
        android:layout_below="@+id/lin1">





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill No:"
            android:textColor="#000"
            android:id="@+id/textBillno"
            android:textStyle="bold"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="60dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:id="@+id/textbillval"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/txt_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="start|center"
            android:paddingLeft="5dp"
            android:text="Sl.no"
            android:textColor="#FFFF"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_fName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="start|center"
            android:text="Product name"
            android:textColor="#FFFF"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_lName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Oty"
            android:textColor="#FFFF"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center"
            android:text="Price"
            android:textColor="#FFFF"
            android:textSize="13dp"
            android:textStyle="bold" />

    </LinearLayout>
    <ListView
        android:id="@+id/Bill_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp">

    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginTop="500dp"
        android:background="#FF5722">

        <Button
            android:id="@+id/print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="print"
            android:layout_marginLeft="2dp"
            android:textColor="@android:color/background_dark"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="#FFFF"
            android:layout_marginLeft="2dp"
            android:id="@+id/textView" />

        <Button
            android:id="@+id/sendmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mail"
            android:layout_marginLeft="2dp"
            android:textColor="@android:color/background_dark"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/toatlamt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="1dp"
            android:text="TOTAL :"
            android:textColor="@android:color/primary_text_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/grand_tot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="20dp"
            android:text="0"
            android:textColor="@android:color/primary_text_dark"
            android:textStyle="bold" />


    </LinearLayout>



</RelativeLayout>