<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#BF000000"
        android:orientation="horizontal"
        android:id="@+id/liner_a">

        <Button
            android:id="@+id/back_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back"
            android:padding="40dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/val7"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:textColor="#FFF"
            android:id="@+id/textView7"
            android:textSize="20sp"
            android:layout_gravity="bottom" />



        <Button
            android:id="@+id/dot_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="60dp"
            android:background="@drawable/dot"
            android:padding="40dp" />

        </LinearLayout>




    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/startDate"
                    android:hint="Starting Date"
                    android:inputType="date"
                    android:drawableRight="@drawable/c1"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"/>



                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/endDate"
                    android:hint="EndingDate"
                    android:drawableRight="@drawable/c1"
                    android:textColor="#FFFFFF"
                    android:inputType="date"
                    android:textColorHint="#FFFFFF"/>




                <Button
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="go"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/t1"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:gravity="left"
                    android:textSize="20sp"
                    android:text="Date"
                  android:layout_marginLeft="20dp"
                    android:textColor="#FFFF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:gravity="left"
                    android:text="Bill No"
                    android:layout_margin="3dp"
                    android:textColor="#FFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

          <TextView
                    android:id="@+id/t3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="#FFFF"
                    android:layout_margin="3dp"
                    android:layout_marginLeft="25dp"
                    android:text="Customer Name"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/table"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="#FFFF"
                    android:layout_margin="3dp"
                    android:layout_marginLeft="25dp"
                    android:text="Table"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                android:id="@+id/t4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="#FFFF"
                android:layout_margin="3dp"
                android:layout_marginLeft="25dp"
                android:text="Grand Tot"
                android:textSize="20sp"
                android:textStyle="bold" />



         </LinearLayout>


            <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="30dp"/>




        </LinearLayout>



    </HorizontalScrollView>


    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:orientation="vertical"
        android:layout_marginTop="470dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Â©2016 Habitat. All Rights Reserved. Created By SQIndia."
            android:textSize="12sp"
            android:layout_marginLeft="30dp"
            android:gravity="center_horizontal"
            android:textColor="#FFFF"
            android:id="@+id/textrights"
            android:layout_marginTop="38dp"/>
    </LinearLayout>




</LinearLayout>