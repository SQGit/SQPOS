    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="525dp"
        android:background="#D9000000"
        android:orientation="horizontal">

        <Button
            android:id="@+id/print"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/prints" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="or"
            android:textColor="#FFFF" />

        <Button
            android:id="@+id/sendmail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/emails" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="or"
            android:textColor="#FFFF" />

        <Button
            android:id="@+id/save"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/saves" />


        <TextView
            android:id="@+id/toatlamt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="TOTAL :"
            android:textColor="@android:color/primary_text_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/grand_tot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:text="0"
            android:textColor="@android:color/primary_text_dark"
            android:textStyle="bold" />


    </LinearLayout>


    <include
        android:id="@+id/container_header_lyt"
        layout="@layout/sqindia_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

    </include>

    <com.arlib.floatingsearchview.FloatingSearchView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="18dp"
        android:background="#000000"
        android:textColor="#FFFF"
        app:floatingSearch_backgroundColor="#D9794b2e"
        app:floatingSearch_viewTextColor="#FFFF"
        app:floatingSearch_hintTextColor="#FFFF"
        app:floatingSearch_actionMenuOverflowColor="#D6000000"
        app:floatingSearch_dismissOnOutsideTouch="true"
        app:floatingSearch_leftActionMode="showSearch"
        app:floatingSearch_searchBarMarginTop="@dimen/search_view_inset"
        app:floatingSearch_searchHint="Product"
        app:floatingSearch_showSearchKey="false">
        <requestFocus/>

    </com.arlib.floatingsearchview.FloatingSearchView>

    <EditText

        android:id="@+id/product_qty"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="205dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="52.5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_bg_stroke"
        android:ems="5"
        android:textColorHint="#dcd3cf"
        android:hint="QTY"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#FFFF"
        android:textSize="18dp">



    </EditText>

    <Button
        android:id="@+id/add_bill"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="1dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/rounded"
        android:drawableLeft="@mipmap/additem_small"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Add"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textStyle="bold" />


</RelativeLayout>