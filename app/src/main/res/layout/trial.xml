<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#BF000000"
        android:orientation="horizontal"
        android:id="@+id/liner_a">



        <Button
            android:id="@+id/back_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back"
            android:padding="40dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:text="@string/val"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dot_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="60dp"
            android:background="@drawable/dot"
            android:padding="40dp" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

     >


        <com.arlib.floatingsearchview.FloatingSearchView
            android:id="@+id/product_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#FFFF"
            app:floatingSearch_backgroundColor="#D9794b2e"
            app:floatingSearch_viewTextColor="#FFFF"
            app:floatingSearch_hintTextColor="#FFFF"
            app:floatingSearch_actionMenuOverflowColor="#D6000000"
            app:floatingSearch_dismissOnOutsideTouch="true"
            app:floatingSearch_leftActionMode="showSearch"
            app:floatingSearch_searchHint="Product"
            app:floatingSearch_showSearchKey="false">
            <requestFocus/>

        </com.arlib.floatingsearchview.FloatingSearchView>


        <EditText
            android:id="@+id/product_qty"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="200dp"
            android:background="@drawable/button_bg_stroke"
            android:layout_marginTop="15dp"
            android:ems="5"
            android:textColorHint="#dcd3cf"
            android:hint="QTY"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#FFFF"
            android:textSize="18dp">



        </EditText>

        <Button
            android:id="@+id/add_bill"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="right"
            android:background="@drawable/rounded"
            android:drawableLeft="@mipmap/additem_small"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Add"
            android:textSize="18dp"
            android:textColor="#FFFF"
            android:textStyle="bold" />

    </RelativeLayout>





      <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1">


        <com.rey.material.widget.Spinner
            android:id="@+id/spinner1"
            style="@style/spin2"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:paddingBottom="3dp"
            android:paddingTop="2dp"
            app:spn_label="Choose Table" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="26dp"
            android:layout_height="18dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:background="@drawable/down_arrow" />
</FrameLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lll"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textBillno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:text="Bill No:"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#FFFF"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/textbillval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textSize="18dp"
            android:textColor="#FFFF"
            android:textStyle="bold"

            />
    </LinearLayout>




    <ScrollView
        android:id="@+id/bottomvalue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">





            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4.8">

                <!--<TextView
                    android:id="@+id/txt_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="start|center"
                    android:paddingLeft="5dp"
                    android:text="Sno"
                    android:textColor="#FFFF"
                    android:textSize="18dp"
                    android:textStyle="bold" />-->

                <TextView
                    android:id="@+id/txt_fName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="start|center"
                    android:text="Item Name"
                    android:layout_marginLeft="20dp"
                    android:textColor="#FFFF"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_pprz"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="Price"
                    android:textColor="#FFFF"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt_lName"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Qty"
                    android:textColor="#FFFF"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:text="Total"

                    android:textColor="#FFFF"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ListView
                android:id="@+id/Bill_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

            </ListView>


        </LinearLayout>
    </ScrollView>




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:background="#D9000000"
            android:orientation="horizontal">

            <Button
                android:id="@+id/print"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/prints" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text="or"
                android:textColor="#FFFF" />

            <Button
                android:id="@+id/sendmail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/emails" />




            <TextView
                android:id="@+id/toatlamt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:text="TOTAL :"
                android:textColor="@android:color/primary_text_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/grand_tot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@android:color/transparent"
                android:text="0"
                android:textColor="@android:color/primary_text_dark"
                android:textStyle="bold" />


        </LinearLayout>




    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ©2016 Habitat. All Rights Reserved. Created By SQIndia."
        android:textSize="12sp"
        android:layout_marginLeft="30dp"
        android:gravity="center_horizontal"
        android:textColor="#FFFF"
        android:id="@+id/textrights"
        />


</LinearLayout>