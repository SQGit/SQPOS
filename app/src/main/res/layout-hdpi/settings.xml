<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">





        <ScrollView
            android:id="@+id/bottomvalue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:text="Change Currency"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textSize="16sp"
                        android:layout_marginTop="20dp"
                        android:gravity="left|center"
                        android:textColor="#ffff"
                        android:id="@+id/txthead1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/view1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#FFFF"/>



                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:text="Change Footer Content"
                        android:textSize="16sp"
                        android:gravity="left|center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textColor="#ffff"
                        android:id="@+id/txthead2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/view2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#FFFF"/>


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:text="Change App Name"
                        android:textSize="16sp"
                        android:gravity="left|center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textColor="#ffff"
                        android:id="@+id/txthead3" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/view3"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#FFFF"/>



                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:text="Change Bill Format"
                        android:textSize="16sp"
                        android:gravity="left|center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textColor="#ffff"
                        android:id="@+id/txthead4" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/view4"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#FFFF"/>



                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:text="Mail Delivery Details"
                        android:textSize="16sp"
                        android:gravity="left|center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textColor="#ffff"
                        android:id="@+id/txthead5" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/view5"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#FFFF"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            >

            <include layout="@layout/copyrights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                >

            </include>


        </LinearLayout>

    </LinearLayout>


